{
    "name": "viloveul/auth",
    "description": "Viloveul auth with jwt.",
    "type": "framework",
    "license": "MIT",
    "authors": [{
        "name": "Fajrul Akbar Zuhdi",
        "email": "fajrulaz@gmail.com"
    }],
    "keywords": ["framework", "micro", "zafex", "viloveul", "fajrulaz", "auth"],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Viloveul\\Auth\\": "src/"
        }
    },
    "scripts": {
        "genrsakey": [
            "mkdir -p config/jwt",
            "openssl genrsa -out config/jwt/private.pem -aes256 4096",
            "openssl rsa -pubout -in config/jwt/private.pem -out config/jwt/public.pem"
        ]
    },
    "require": {
        "lcobucci/jwt": "3.2.*"
    }
}